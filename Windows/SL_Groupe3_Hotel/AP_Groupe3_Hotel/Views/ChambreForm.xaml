<Window x:Class="AP_Groupe3_Hotel.Views.ChambreForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:AP_Groupe3_Hotel.Views"
        mc:Ignorable="d"
        Title="ChambreForm" 
        Height="430" Width="480"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0"
           Fill="#5CD5FB">
        </Rectangle>
        
        <TextBlock Grid.Row="0"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           Text="Chambre"
           FontSize="22"
           FontWeight="Bold"/>

        <Rectangle Fill="#777777"
           Grid.Row="1"
           Grid.RowSpan="5"
           Margin="30"
           RadiusX="30"
           RadiusY="30">
        </Rectangle>

        <StackPanel Grid.Row="2"
            Orientation="Horizontal">

            <TextBlock VerticalAlignment="Center"
               Text="Capacité :"
               Margin="80,0,0,0" 
               Foreground="White" 
               FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,20"
                     Width="260"
                     BorderBrush="White"
                     Text="{Binding Chambre.CapCha}">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="3"
            Orientation="Horizontal">

            <TextBlock VerticalAlignment="Center"
               Text="Prix :"
               Margin="80,0,0,0" 
               Foreground="White" 
               FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,20"
                     Width="290"
                     BorderBrush="White"
                     Text="{Binding Chambre.PrixCha}">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="4"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center"
           Text="Étage :"
           Margin="80,0,0,0" 
           Foreground="White" 
           FontSize="16">
            </TextBlock>

            <ComboBox Width="270"
                      BorderBrush="White"
                      Margin="20,0,0,0"
                      DisplayMemberPath="CodeEta"
                      SelectedValuePath="PkEta"
                      ItemsSource="{Binding Etages}"
                      SelectedItem="{Binding Chambre.PfkChaEtaNavigation}"/>
        </StackPanel>

        <StackPanel Grid.Row="5"
            Orientation="Horizontal">

            <Button x:Name="btnEnregistrer" Height="40"
                    Width="150"
                    Margin="80,0,0,40"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnEnregistrer_Click" >
                <TextBlock Text="Enregistrer" />
            </Button>

            <Button x:Name="btnChambreFormRetour"
                    Height="40"
                    Width="150"
                    Margin="50,0,0,40"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnChambreFormRetour_Click" >
                <TextBlock Text="Retour" />
            </Button>

        </StackPanel>

    </Grid>
</Window>
