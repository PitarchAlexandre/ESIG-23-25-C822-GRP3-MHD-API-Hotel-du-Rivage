<Window x:Class="AP_Groupe3_Hotel.Views.ClientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:utilites="clr-namespace:AP_Groupe3_Hotel.Utilities"
        xmlns:local="clr-namespace:AP_Groupe3_Hotel.Views"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        mc:Ignorable="d"
        Title="ClientForm" 
        Width="500" Height="520"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <utilites:DateTimeToDateOnlyConverter x:Key="DateTimeToDateOnlyConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="72"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0"
                   Fill="#5CD5FB" Margin="0,0,0,42" Grid.RowSpan="2">
        </Rectangle>

        <TextBlock
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Client"
                   FontSize="22"
                   FontWeight="Bold" Height="27" Width="58"/>

        <Rectangle Fill="#777777"
                   Grid.Row="1"
                   Grid.RowSpan="10"
                   Margin="30,30,30,30"
                   RadiusX="30"
                   RadiusY="30">
        </Rectangle>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal" Margin="0,42,0,0" Grid.RowSpan="2">

            <TextBlock VerticalAlignment="Center"
                       Text="Nom :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,10"
                     Width="250"
                     BorderBrush="White"
                     Text="{Binding Client.NomCli}">
            </TextBox>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal" Margin="0,43,0,42" Grid.RowSpan="3">

            <TextBlock VerticalAlignment="Center"
                       Text="Prénom :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,10"
                     Width="230"
                     BorderBrush="White"
                     Text="{Binding Client.PreCli}">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal">

            <TextBlock VerticalAlignment="Center"
                       Text="Rue :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,10"
                     Width="260"
                     BorderBrush="White"
                     Text="{Binding Client.RueCli}">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="4"
                    Orientation="Horizontal" Margin="0,42,0,0" Grid.RowSpan="2">

            <TextBlock VerticalAlignment="Center"
                       Text="Localité :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <!--Combo box-->
            <ComboBox Width="230"
                      BorderBrush="White"
                      Margin="20,0,0,10"
                      DisplayMemberPath="NpaNomLoc"
                      SelectedValuePath="PkLoc"
                      ItemsSource="{Binding Localites}"
                      SelectedItem="{Binding Client.FkCliLocNavigation}"/>
        </StackPanel>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal" Margin="0,43,0,42" Grid.RowSpan="3">

            <TextBlock VerticalAlignment="Center"
                       Text="Date de naissance :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <!--Date de naissance-->
            <DatePicker Margin="5" 
                        BorderBrush="White"
                        Width="170"
                        SelectedDate="{Binding Client.DatNaisCli, Converter={StaticResource DateTimeToDateOnlyConverter}}"/>
        </StackPanel>

        <StackPanel Grid.Row="7"
                    Orientation="Horizontal">

            <TextBlock VerticalAlignment="Center"
                       Text="Téléphone :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <TextBox Margin="20,0,0,10"
                     Width="210"
                     BorderBrush="White"
                     Text="{Binding Client.TelCli}">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="7"
                    Orientation="Horizontal" Margin="0,42,0,0" Grid.RowSpan="2">

            <TextBlock VerticalAlignment="Center"
                       Text="Email :"
                       Margin="80,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>

            <TextBox Margin="20,0,0,10"
                     Width="240"
                     BorderBrush="White"
                     Text="{Binding Client.MailCli}" Height="33">
            </TextBox>

        </StackPanel>

        <StackPanel Grid.Row="9"
                    Orientation="Horizontal" Margin="0,5,0,0" >



        </StackPanel>

        <StackPanel  Grid.Row="9"
                    Orientation="Horizontal" Margin="0,5,0,0">

            <Button x:Name="btnSave" Height="40"
                    Width="160"
                    Margin="60,0,0,0"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnSave_Click" 
                    >
                <TextBlock Text="Enregistrer" />
            </Button>

            <Button x:Name="btnClientRetour" Height="40"
                    Width="160"
                    Margin="60,0,0,0"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnClientRetour_Click" 
                    >
                <TextBlock Text="Retour" />
            </Button>

        </StackPanel>

    </Grid>
</Window>
