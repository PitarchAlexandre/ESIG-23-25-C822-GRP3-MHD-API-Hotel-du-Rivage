<Window x:Class="AP_Groupe3_Hotel.Views.ReservationForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        xmlns:local="clr-namespace:AP_Groupe3_Hotel.Views" xmlns:utilites="clr-namespace:AP_Groupe3_Hotel.Utilities"
        mc:Ignorable="d"
        Title="ReservationForm" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <utilites:StatutToBooleanConverter x:Key="StatutToBooleanConverter"/>
        <utilites:DateTimeToDateOnlyConverter x:Key="DateTimeToDateOnlyConverter"/>
    </Window.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.ColumnSpan="2"
                   Grid.Row="0"
                   Fill="#5CD5FB">
        </Rectangle>
        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Réservation"
                   FontSize="22"
                   FontWeight="Bold"/>

        <Rectangle Fill="#777777"
                   Grid.Column="0"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Grid.RowSpan="9"
                   Margin="30"
                   RadiusX="30"
                   RadiusY="30">
        </Rectangle>
        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Text="Client :"
                   Margin="60,0,0,0" 
                   Foreground="White" 
                   FontSize="16">
        </TextBlock>
        <ComboBox Width="250"
                  Grid.Column="1"
                  Grid.Row="2" 
                  BorderBrush="White"
                  Margin="0,0,60,0"
                  DisplayMemberPath="NomPrenom"
                  SelectedValuePath="PkCli"
                  ItemsSource="{Binding Clients}"
                  SelectedItem="{Binding Reservation.FkResCliNavigation}"/>

        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   Text="Chambre :"
                   Margin="60,0,0,0" 
                   Foreground="White" 
                   FontSize="16">
        </TextBlock>
        
        <ComboBox Width="250"
                  Grid.Column="1"
                  Grid.Row="3" 
                  Margin="0,0,60,0" 
                  BorderBrush="White"
                  DisplayMemberPath="ChaEta"
                  SelectedValuePath="PkCha"
                  ItemsSource="{Binding Chambres}"
                  SelectedItem="{Binding Reservation.TbChambre}"/>
        
        <StackPanel Orientation="Horizontal"
                    Grid.Column="0"
                    Grid.Row="4"
                    Grid.ColumnSpan="2">

            <TextBlock Grid.Column="0"
                       Grid.Row="4"
                       Grid.ColumnSpan="2"
                       VerticalAlignment="Center"
                       Text="Nombre de personne :"
                       Margin="60,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <TextBox Grid.Column="1"
                     Grid.Row="2"
                     Margin="20,0,0,10"
                     Width="185"
                     BorderBrush="White"
                     Text="{Binding Reservation.NbrPerRes}">
            </TextBox>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="5"
                    Orientation="Horizontal"
                    Grid.ColumnSpan="2">

            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       VerticalAlignment="Center"
                       Text="Date d'arrivée :"
                       Margin="60,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>

            <DatePicker 
                    Margin="5" 
                    BorderBrush="White"
                    Width="250"
                    SelectedDate="{Binding Reservation.DatArrRes, Converter={StaticResource DateTimeToDateOnlyConverter}}">
            </DatePicker>

        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="6"
                    Orientation="Horizontal"
                    Grid.ColumnSpan="2">

            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       VerticalAlignment="Center"
                       Text="Date de départ :"
                       Margin="60,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <DatePicker Margin="5" 
                        BorderBrush="White"
                        Width="240"
                        SelectedDate="{Binding Reservation.DatDepRes, Converter={StaticResource DateTimeToDateOnlyConverter}}"/>

        </StackPanel>
        <StackPanel Grid.Column="0"
                    Grid.Row="7"
                    Orientation="Horizontal"
                    Grid.ColumnSpan="2">

            <TextBlock Grid.Column="0"
                       Grid.Row="5"
                       VerticalAlignment="Center"
                       Text="Petit-déjeuner inclus :"
                       Margin="60,0,0,0" 
                       Foreground="White" 
                       FontSize="16">
            </TextBlock>
            <CheckBox Margin="10,0,0,0"
                      IsChecked="{Binding Reservation.DejRes, Converter={StaticResource StatutToBooleanConverter}}"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2">
            
            <Button x:Name="btnReservationFormEnregistrer" Height="40"
                    Width="150"
                    Margin="80,0,0,0"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnReservationFormEnregistrer_Click" >
                <TextBlock Text="Enregistrer" />
            </Button>
            <Button x:Name="btnReservationFormRetour" Height="40"
                    Width="150"
                    Margin="50,0,0,0"
                    Background="#5CD5FB"
                    BorderBrush="#5CD5FB"
                    Foreground="Black"
                    materialDesign:ButtonAssist.CornerRadius="25"
                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                    ToolTip="MaterialDesignRaisedDarkButton with Round Corners" Click="btnReservationFormRetour_Click" >
                <TextBlock Text="Retour" />
            </Button>
        </StackPanel>
        



    </Grid>
</Window>
